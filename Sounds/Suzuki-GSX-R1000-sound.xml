<PropertyList>

 <fx>
 
  <crank>
   <name>crank</name>
   <mode>looped</mode>
   <path>Sounds/cranking.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </crank>

	<engine>
	    <name>enginehight</name>
	    <path>Aircraft/Suzuki-GSX-R/Sounds/Suzuki-GSX-R-engine.wav</path>
	    <mode>looped</mode>
 	     <condition>
			 <and>
  		 		 <not>
	  		 		 <equals>
	   	      	   	  	<property>/sim/current-view/view-number</property>
	  		   			<value>6</value>
	  	   	 		 </equals>	
  	   	 		 </not>				 
  		 		 <greater-than>
   	      	   	  	<property>/engines/engine/rpm</property>
  		   			<value>3000</value>
  	   	 		</greater-than>
			</and>
 	    </condition>
	    <volume>
	      <property>/engines/engine/mp-osi</property>
	      <factor>0.04</factor>
	      <min>0.9</min>
	      <max>8</max>
	      <offset>0.001</offset>
	    </volume>
	    <pitch>
	      <property>/engines/engine/rpm</property>
	      <factor>0.00012</factor>
	      <min>0.001</min>
	      <max>7.0</max>
	      <offset>0.012</offset>
	    </pitch>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	</engine>
	  
  	<engine>
  	    <name>enginehightout</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/Suzuki-GSX-R-engine.wav</path>
  	    <mode>looped</mode>
   	     <condition>
			 <and>
  		 		 <equals>
   	      	   	  	<property>/sim/current-view/view-number</property>
  		   			<value>6</value>
  	   	 		 </equals>				 
  		 		 <greater-than>
   	      	   	  	<property>/engines/engine/rpm</property>
  		   			<value>3000</value>
  	   	 		</greater-than>
   			 	<less-than>
     	      	   <property>/engines/engine/killed</property>
   			   	   <value>0.95</value>
   		   		</less-than>
			</and>
   	    </condition>
  	    <volume>
  	      <property>/engines/engine/mp-osi</property>
  	      <factor>1.0</factor>
  	      <min>1.0</min>
  	      <max>4.0</max>
  	      <offset>0.1</offset>
  	    </volume>
  	    <pitch>
  	      <property>/velocities/airspeed-kt</property>
  	      <factor>0.06</factor>
  	      <min>0.001</min>
  	      <max>40</max>
  	      <offset>0.012</offset>
  	    </pitch>
  	    <reference-dist>40</reference-dist>
  	    <max-dist>700</max-dist>
  	</engine>

  	<engine>
  	    <name>enginecrash</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/Suzuki-GSX-R-broken.wav</path>
  	    <mode>once</mode>
  	     <condition>
			 <greater-than>
  	      	   <property>/engines/engine/killed</property>
			   <value>0.95</value>
		   </greater-than>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </engine>
	  
  	<engine>
  	    <name>enginelow</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/Suzuki-GSX-R1000-engine.wav</path>
  	    <mode>looped</mode>
	     <condition>
			 <less-than>
			   <property>/engines/engine/rpm</property>
			   <value>4000</value>
		   </less-than>		 
		   <greater-than>
 	      	  	<property>/engines/engine/rpm</property>
		   		<value>10</value>
	   	 </greater-than>
	    </condition>
  	    <volume>
  	      <property>/engines/engine/mp-osi</property>
  	      <factor>0.05</factor>
  	      <min>2</min>
  	      <max>12</max>
  	      <offset>0.001</offset>
  	    </volume>
  	    <pitch>
  	      <property>/engines/engine/rpm</property>
  	      <factor>0.0001</factor>
  	      <min>0.001</min>
  	      <max>2.0</max>
  	      <offset>0.1</offset>
  	    </pitch>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </engine>

  <gear>
   <name>gearclutch</name>
   <mode>once</mode>
   <path>Aircraft/Suzuki-GSX-R/Sounds/Suzuki-GSX-R1000-gear.wav</path>
   <condition>
     <property>/engines/engine/gear-sound</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </gear>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.6</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.04</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.06</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/groundspeed-kt</property>
    <factor>0.0025</factor>
    <offset>0.5</offset>
   </pitch>
  </squeal>
 
  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0035</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>
  
  
	<start>
	    <name>startsignal1</name>
	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStart.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>1</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>	  
  
  	<start>
  	    <name>startsignal2</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>2</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start>
	  
  	<start>
  	    <name>startsignal3</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>3</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start>
  
    	<start>
    	    <name>startsignal4</name>
    	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStart.wav</path>
    	    <mode>once</mode>
    	     <condition>
    		 <equals>
    	      	   <property>/startsignal</property>
    		   <value>4</value>
    	   </equals>
    	    </condition>
    	    <volume>
    	      <value>10.0</value>
    	    </volume>
    	    <reference-dist>180</reference-dist>
    	    <max-dist>500</max-dist>
    	  </start>
	  
    	<start>
    	    <name>startsignal5</name>
    	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStart.wav</path>
    	    <mode>once</mode>
    	     <condition>
    		 <equals>
    	      	   <property>/startsignal</property>
    		   <value>5</value>
    	   </equals>
    	    </condition>
    	    <volume>
    	      <value>10.0</value>
    	    </volume>
    	    <reference-dist>180</reference-dist>
    	    <max-dist>500</max-dist>
    	  </start> 
  	<start>
  	    <name>startsignal7</name>
  	    <path>Aircraft/Suzuki-GSX-R/Sounds/beepStartGo.wav</path>
  	    <mode>once</mode>
  	     <condition>
			 <equals>
  	      	   <property>/startsignal</property>
			   <value>7</value>
		   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start>

</fx>
 
</PropertyList>
